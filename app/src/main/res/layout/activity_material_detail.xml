                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试厂家"
                        android:textSize="@dimen/titleSize"/>

                </TableRow>

                <TableRow
                    android:id="@+id/tb1_row4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
