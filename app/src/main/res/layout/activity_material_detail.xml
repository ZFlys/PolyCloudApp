                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试加工级别"
                        android:textSize="@dimen/titleSize"/>

                </TableRow>

                <TableRow
                    android:id="@+id/tb1_row5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特征: "
                        android:textSize="@dimen/titleSize"/>

                    <TextView
