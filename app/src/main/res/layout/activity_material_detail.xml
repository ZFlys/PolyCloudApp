                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试名称"
                        android:textSize="@dimen/titleSize"/>

                </TableRow>

                <TableRow
                    android:id="@+id/tb1_row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <TextView
                        android:id="@+id/tv_no_or_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="牌号/代号: "
                        android:textSize="@dimen/titleSize"/>

                    <TextView
                        android:id="@+id/tb1_tv_row2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
